<%- include('../partials/auth-layout', { body: `
  <h1 class="text-3xl text-center font-bold text-blue-600 mb-1">Login into your account</h1>
  <p class="text-center text-gray-600">
    Don't have an account? <a href="/sign-up" class="text-blue-600 hover:underline">Sign up here</a>.
  </p>
  <form id="sign-in-form" class="mt-8 flex-col flex gap-5">
    <div class="">
      <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-lg focus:outline-none border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 px-4 py-3 focus:ring-opacity-50">
    </div>
    <div class="">
      <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
      <div class="relative">
        <input type="password" id="password" name="password" required class="mt-1 block w-full rounded-lg focus:outline-none border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 px-4 py-3 focus:ring-opacity-50">
        <button type="button" id="toggle-password" class="absolute inset-y-0 right-3 flex items-center text-sm text-gray-500">
          Show
        </button>
      </div>
    </div>
    <div class="mt-3">
      <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition duration-300">Sign In</button>
    </div>
  </form>
  <p class="mt-5 text-center text-sm text-gray-600">
    Forgot your password? <a href="/forgot-password" class="font-medium hover:underline text-blue-600 hover:text-blue-500">Reset it here</a>
  </p>
` }) %>