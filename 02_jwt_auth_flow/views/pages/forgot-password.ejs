<%- include('../partials/auth-layout', { body: `
  <h1 class="text-3xl text-center font-bold text-blue-600 mb-2.5">Forgot Password</h1>
  <p class="text-center text-gray-600">
    No worries! Just enter your email address below and we'll send you a code to reset your password.
  </p>
  <form action="/api/auth/forgot-password" class="mt-8 flex-col flex gap-5" method="POST">
    <div class="">
      <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-lg focus:outline-none border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 px-4 py-3 focus:ring-opacity-50">
    </div>
    <div class="mt-3">
      <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition duration-300">Continue</button>
    </div>
  </form>
` }) %>