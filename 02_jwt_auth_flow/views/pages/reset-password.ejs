<%- include('../partials/auth-layout', { body: `
  <h1 class="text-3xl text-center font-bold text-blue-600 mb-2.5">Reset Password</h1>
  <p class="text-center text-gray-600 mb-8">
    Please enter your new password below. Make sure it's strong and unique.
  </p>
  <form class="mt-8 flex-col flex gap-5" id="reset-password-form">
    <div>
      <label for="newPassword" class="block text-sm font-medium text-gray-700">New Password</label>
      <div class="relative">
        <input type="password" id="newPassword" name="newPassword" required class="mt-1 block w-full rounded-lg focus:outline-none border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 px-4 py-3 focus:ring-opacity-50">
        <button type="button" id="toggle-new-password" class="absolute inset-y-0 right-3 flex items-center text-sm text-gray-500">
          Show
        </button>
      </div>
    </div>

    <div>
      <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm New Password</label>
      <div class="relative">
        <input type="password" id="confirmPassword" name="confirmPassword" required class="mt-1 block w-full rounded-lg focus:outline-none border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 px-4 py-3 focus:ring-opacity-50">
        <button type="button" id="toggle-confirm-password" class="absolute inset-y-0 right-3 flex items-center text-sm text-gray-500">
          Show
        </button>
      </div>
    </div>
    <div class="mt-6">
      <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition duration-300">Reset Password</button>
    </div>
  </form>
` }) %>